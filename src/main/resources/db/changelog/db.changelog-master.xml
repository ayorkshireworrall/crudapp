<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">
    <changeSet id="1" author="aworrall">
        <createTable tableName="widget">
            <column name="id" type="BIGINT" autoIncrement="true"/>
            <column name="name" type="varchar(50)"/>
            <column name="description" type="varchar(255)"/>
            <column name="value" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="aworrall">
        <createTable tableName="user">
            <column name="id" type="BIGINT" autoIncrement="true"/>
            <column name="username" type="varchar(50)"/>
            <column name="password" type="varchar(50)"/>
            <column name="enabled" type="boolean"/>
            <column name="roles" type="varchar(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="aworrall">
        <addColumn tableName="user">
            <column name="auth_provider" type="varchar(20)" />
            <column name="email" type="varchar(50)"/>
            <column name="provider_id" type="varchar(20)" />
        </addColumn>
    </changeSet>
    <changeSet id="4" author="aworrall">
        <addColumn tableName="user">
            <column name="registered_on" type="DATETIME" />
        </addColumn>
        <createTable tableName="email">
            <column name="id" type="BIGINT" autoIncrement="true"/>
            <column name="addressee" type="varchar(254)"/>
            <column name="created_on" type="DATETIME" />
            <column name="status" type="varchar(50)" />
            <column name="subject" type="varchar(100)" />
        </createTable>
    </changeSet>
</databaseChangeLog>